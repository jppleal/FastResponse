<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Text Fields (Up to 4 Fields) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Field of Text -->
        <TextView
            android:id="@+id/typeOf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Field 1" />

        <!-- Second Field of Text -->
        <TextView
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Field 2" />

        <!-- Third Field of Text -->
        <TextView
            android:id="@+id/locus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Field 3" />

        <!-- Fourth Field of Text -->
        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Field 4" />
    </LinearLayout>

    <!-- Open Item Button (Square Format) -->
    <Button
        android:id="@+id/buttonOpenItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="0dp"
        android:text="@string/open_item" />

    <!-- Open Navigation Button (Square Format) -->
    <Button
        android:id="@+id/buttonOpenNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="0dp"
        android:text="@string/open_navigation" />
</LinearLayout>
